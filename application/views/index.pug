extends layout

block content
  h1 LIFECHAIN
  p Bem vindo ao Lifechain 
  div
    a(href="/life/new")
      | Criar uma nova pessoa
  br
  div
    | Buscar uma pessoa
    input#lifeId  
  a#reflectedlink(href='http://localhost:3000/life') http://localhost:3000/life
  script(type='text/javascript').
    var link= document.getElementById('reflectedlink');
    var input= document.getElementById('lifeId');
    input.onchange=input.onkeyup= function() {
      link.href =  'http://localhost:3000/life/'+encodeURIComponent(input.value);
      link.firstChild.data= link.href;
    };

